{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["packages/min/src/*"]
    },
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "packages/min/src/**/*"
  ]
}